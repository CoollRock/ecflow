%include <head.h>

# ======================================================================
# Run LOCALLY
# ======================================================================
export WK=%WK%

if [[ %SET_TO_TEST_SCRIPT% = true ]] ; then
   echo "Test only"
else
   cd $WK;
   
   # Allow test to be rerun. This can fail
   Client/bin/%COMPILER_VERSION%/release/ecflow_client --terminate yes || true
   
   # Clear up
   rm -rf `hostname`.*
   
   
   # test server for memory leaks, & give it time to start
   Server/bin/%COMPILER_VERSION%/profile/ecflow_server --ecfinterval=3 &
   sleep 10

   export ECF_NODE=localhost
   Client/bin/%COMPILER_VERSION%/release/tclient
   Test/bin/%COMPILER_VERSION%/release/server-test
   
   # wait for server to exit  
   sleep 2
   
   # Move gmon file to Server. Easier for eclipse 
   mv gmon.out Server/.
   
   # Clear up
   rm -rf `hostname`.*
fi

%include <tail.h>